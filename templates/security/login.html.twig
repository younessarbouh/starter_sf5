{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-md-6 mx-auto">
			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<h1 class="h3 mb-3 mt-5 font-weight-normal text-center">Please sign in</h1>
				<p class="mb-5 text-center text-muted">We are waiting for you.</p>

				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control" required>
				</div>

				<div class="d-flex justify-content-between">
					<div class="form-group">
						<div class="form-check">
							<input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me">
							<label class="form-check-label" for="remember_me">
								Remember me
							</label>
						</div>
					</div>

					<a href="{{ path('app_forgot_password_request') }}">Forgot password?</a>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-lg btn-block btn-primary" type="submit">
					Sign in
				</button>

				<p class="mt-5 mb-3 text-center text-muted">
					Not registered yet?
					<a href="{{ path('app_register') }}">Create an account</a>
				</p>
			</form>
		</div>
	</div>


{% endblock %}
