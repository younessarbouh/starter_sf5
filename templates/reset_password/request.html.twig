{% extends 'layouts/base.html.twig' %}

{% block title "Reset your password" %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<h1 class="my-6 text-center">Reset your password</h1>

			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small class="text-muted text-center">
					Enter your email address and we we will send you a
					                link to reset your password.
				</small>
			</div>

			<button class="btn btn-primary btn-block btn-lg ">Send password reset email</button>
			{{ form_end(requestForm) }}
		</div>
	</div>
{% endblock %}
